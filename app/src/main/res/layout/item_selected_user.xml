<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/H50"
        android:paddingLeft="@dimen/W10"
        android:paddingRight="@dimen/W10"
        android:layout_marginTop="@dimen/H10"
        android:minWidth="@dimen/W120"
        android:gravity="center"
        android:textColor="@color/c_303030"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_ffffff_f2f2f2">
    </TextView>

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="@dimen/W15"
        android:layout_height="@dimen/H15"
        android:src="@mipmap/icon_comment_close"
        android:layout_toRightOf="@id/tv_user"
        android:layout_marginLeft="-10dp">
    </ImageView>
</RelativeLayout>