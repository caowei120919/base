<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/H800">

        <ImageView
            android:id="@+id/img_start"
            android:layout_width="@dimen/W20"
            android:layout_height="@dimen/W20"
            android:src="@mipmap/action_snapshot_circlhole"
            android:layout_marginLeft="@dimen/W157"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/H31">
        </ImageView>

        <ImageView
            android:id="@+id/img_initial"
            android:layout_width="@dimen/W20"
            android:layout_height="@dimen/W20"
            android:src="@mipmap/action_snapshot_circlfull"
            android:layout_marginLeft="@dimen/W157"
            android:scaleType="centerCrop"
            android:layout_below="@id/img_start"
            android:layout_marginTop="@dimen/H40">
        </ImageView>

        <TextView
            android:layout_width="@dimen/W90"
            android:layout_height="@dimen/H40"
            android:text="@string/the_initial"
            android:textSize="12sp"
            android:textColor="@color/c_da3a16"
            android:gravity="center"
            android:layout_marginTop="@dimen/H81"
            android:layout_marginLeft="@dimen/W25"
            android:background="@mipmap/qipao_white">
        </TextView>

        <TextView
            android:id="@+id/tv_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_initial"
            android:layout_marginLeft="@dimen/W25"
            android:layout_marginTop="@dimen/H81"
            android:textColor="@color/c_303030">
        </TextView>

        <TextView
            android:id="@+id/tv_startValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/W25"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/W25"
            android:layout_marginTop="@dimen/H78"
            android:textColor="@color/c_303030">
        </TextView>

        <ImageView
            android:id="@+id/img_end"
            android:layout_width="@dimen/W20"
            android:layout_height="@dimen/W20"
            android:src="@mipmap/action_snapshot_circlfull"
            android:layout_marginLeft="@dimen/W157"
            android:scaleType="centerCrop"
            android:layout_marginBottom="@dimen/H40"
            android:layout_above="@id/img_arrow">
        </ImageView>

        <TextView
            android:id="@+id/tv_currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_initial"
            android:layout_marginTop="@dimen/H60"
            android:layout_marginLeft="@dimen/W142"
            android:background="@drawable/shape_fbebe7_round"
            android:textColor="@color/c_da3a16"
            android:textSize="12sp"
            android:visibility="gone"
            android:text="2019.02.10"
            android:drawablePadding="@dimen/W20"
            android:paddingRight="@dimen/W20"
            android:gravity="center"
            android:drawableLeft="@drawable/list_concentric_circles">
        </TextView>

        <TextView
            android:id="@+id/tv_currentValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/W25"
            android:layout_alignTop="@id/tv_currentTime"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/H5"
            android:textColor="@color/c_da3a16">
        </TextView>

        <TextView
            android:id="@+id/tv_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_end"
            android:layout_marginLeft="@dimen/W25"
            android:textColor="@color/c_303030"
            android:layout_marginBottom="@dimen/H35"
            android:layout_above="@id/img_arrow">
        </TextView>

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="@dimen/W20"
            android:layout_height="@dimen/W20"
            android:scaleType="centerCrop"
            android:src="@mipmap/action_snapshot_arrow"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/H30"
            android:layout_marginLeft="@dimen/W157">
        </ImageView>

        <TextView
            android:layout_width="@dimen/W90"
            android:layout_height="@dimen/H40"
            android:text="@string/as_of"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/c_da3a16"
            android:gravity="center"
            android:layout_marginLeft="@dimen/W25"
            android:layout_marginBottom="@dimen/H80"
            android:background="@mipmap/qipao_white">
        </TextView>

        <View
            android:layout_width="@dimen/W2"
            android:layout_height="match_parent"
            android:layout_below="@id/img_start"
            android:layout_above="@id/img_arrow"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/W9"
            android:layout_alignLeft="@id/img_arrow"
            android:background="@drawable/dotted_line_bg">
        </View>

        <com.datacvg.dimp.widget.VerticalProgressBar
            android:id="@+id/verticalPro"
            android:layout_width="@dimen/W5"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/W9"
            android:layout_below="@id/img_initial"
            android:layout_above="@id/img_end"
            android:layout_alignLeft="@id/img_arrow">
        </com.datacvg.dimp.widget.VerticalProgressBar>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_lineToSnap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/H2"
        android:background="@color/c_E7E7E7"
        android:layout_marginLeft="@dimen/W25"
        android:layout_marginRight="@dimen/W25">
    </TextView>

    <RelativeLayout
        android:id="@+id/rel_target"
        android:layout_width="match_parent"
        android:minHeight="@dimen/H186"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_lineToSnap">

        <TextView
            android:id="@+id/tv_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:drawableRight="@mipmap/action_snapshot_threshold"
            android:drawablePadding="@dimen/W25"
            android:textColor="@color/c_303030"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/W25"
            android:layout_marginTop="@dimen/H10">
        </TextView>

        <TextView
            android:id="@+id/tv_targetValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_target"
            android:textColor="@color/c_303030"
            android:textStyle="bold"
            android:layout_alignTop="@id/tv_target"
            android:layout_marginLeft="@dimen/W25">
        </TextView>

        <TextView
            android:id="@+id/tv_targetDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_target"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/W25">
        </TextView>


        <TextView
            android:id="@+id/tv_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/tv_target"
            android:drawableRight="@mipmap/action_snapshot_threshold"
            android:drawablePadding="@dimen/W25"
            android:visibility="gone"
            android:textColor="@color/c_303030"
            android:layout_marginLeft="@dimen/W25"
            android:layout_marginTop="@dimen/H10">
        </TextView>

        <TextView
            android:id="@+id/tv_challengeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_303030"
            android:textStyle="bold"
            android:layout_toRightOf="@id/tv_challenge"
            android:layout_alignTop="@id/tv_challenge"
            android:layout_marginLeft="@dimen/W25">
        </TextView>

        <TextView
            android:id="@+id/tv_challengeDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_challenge"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/W25">
        </TextView>

        <TextView
            android:id="@+id/tv_minimum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/tv_challenge"
            android:drawableRight="@mipmap/action_snapshot_threshold"
            android:drawablePadding="@dimen/W25"
            android:visibility="gone"
            android:textColor="@color/c_303030"
            android:layout_marginLeft="@dimen/W25"
            android:layout_marginTop="@dimen/H10"
            android:layout_marginBottom="@dimen/H10">
        </TextView>

        <TextView
            android:id="@+id/tv_minimumValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_303030"
            android:textStyle="bold"
            android:layout_toRightOf="@id/tv_minimum"
            android:layout_alignTop="@id/tv_minimum"
            android:layout_marginLeft="@dimen/W25">
        </TextView>

        <TextView
            android:id="@+id/tv_minimumDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_minimum"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/W25">
        </TextView>
    </RelativeLayout>
</LinearLayout>