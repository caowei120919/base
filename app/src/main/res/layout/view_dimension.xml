<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_dimension"
    android:layout_width="match_parent"
    android:layout_height="@dimen/H90">

    <LinearLayout
        android:layout_marginLeft="@dimen/W25"
        android:layout_marginRight="@dimen/W25"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_orgName"
            android:textSize="14sp"
            android:visibility="gone"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/c_808080"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </TextView>

        <TextView
            android:id="@+id/tv_proLine"
            android:layout_width="@dimen/W4"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/H30"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/H30"
            android:background="@color/c_17263b">
        </TextView>

        <TextView
            android:id="@+id/tv_proName"
            android:textSize="14sp"
            android:visibility="gone"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/c_808080"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </TextView>

        <TextView
            android:id="@+id/tv_areaLine"
            android:layout_width="@dimen/W4"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="@dimen/H30"
            android:layout_marginBottom="@dimen/H30"
            android:background="@color/c_17263b">
        </TextView>

        <TextView
            android:id="@+id/tv_areaName"
            android:textSize="14sp"
            android:visibility="gone"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/c_808080"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </TextView>
    </LinearLayout>
</RelativeLayout>