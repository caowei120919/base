<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/W320"
    android:layout_height="@dimen/H225"
    android:layout_marginTop="@dimen/H24"
    android:background="@color/c_FFFFFF">

    <ImageView
        android:id="@+id/img_picture"
        android:layout_width="@dimen/W125"
        android:layout_height="@dimen/H100"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/H40"
        android:src="@mipmap/icon_folder">
    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img_picture">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/c_303030"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:gravity="center">
        </TextView>
    </RelativeLayout>
</RelativeLayout>