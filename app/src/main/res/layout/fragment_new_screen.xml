<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/H406"
            android:background="@drawable/shape_ffffff"
            android:layout_marginLeft="@dimen/W24"
            android:layout_marginRight="@dimen/W24"
            android:layout_marginTop="@dimen/H24">

            <TextView
                android:id="@+id/tv_informationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/W24"
                android:layout_marginTop="@dimen/H24"
                android:text="@string/basic_information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/c_000000">
            </TextView>

            <LinearLayout
                android:id="@+id/lin_screenSize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/H105"
                android:layout_marginTop="@dimen/H35"
                android:layout_below="@id/tv_informationTitle"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rel_screenSizeOfNine"
                    android:layout_width="@dimen/W150"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_item_screen_size"
                    android:layout_marginLeft="@dimen/W24">

                    <ImageView
                        android:id="@+id/img_sixteenToNine"
                        android:layout_width="@dimen/W96"
                        android:layout_height="@dimen/H54"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/H15"
                        android:src="@mipmap/icon_sixteen_nine">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16:9"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/img_sixteenToNine"
                        android:textColor="@color/c_303030">
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_screenSizeOfTen"
                    android:layout_width="@dimen/W150"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_item_screen_size"
                    android:layout_marginLeft="@dimen/W24">

                    <ImageView
                        android:id="@+id/img_sixteenToTen"
                        android:layout_width="@dimen/W87"
                        android:layout_height="@dimen/H54"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/H15"
                        android:src="@mipmap/icon_sixteen_nine">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16:10"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/img_sixteenToTen"
                        android:textColor="@color/c_303030">
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_screenSizeOfOne"
                    android:layout_width="@dimen/W150"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/W24"
                    android:background="@drawable/selector_item_screen_size">

                    <ImageView
                        android:id="@+id/img_oneToOne"
                        android:layout_width="@dimen/W54"
                        android:layout_height="@dimen/H54"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/H15"
                        android:src="@mipmap/icon_one_to_one">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1:1"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/img_oneToOne"
                        android:textColor="@color/c_303030">
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_screenSizeOfCustom"
                    android:layout_width="@dimen/W150"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/W24"
                    android:layout_marginRight="@dimen/W24"
                    android:background="@drawable/selector_item_screen_custom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/the_custom"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textColor="@color/c_303030">
                    </TextView>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/status_screen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/H70"
                android:gravity="center_vertical"
                android:layout_below="@id/lin_screenSize"
                android:layout_marginTop="@dimen/H25">

                <LinearLayout
                    android:id="@+id/lin_screenTypeOfNineOrTen"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H70"
                    android:layout_marginTop="@dimen/H25"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/W24"
                        android:layout_marginRight="@dimen/W24">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:text="@string/the_screen_size"
                            android:textColor="@color/c_303030">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_screenSizeValueOfNineOrTen"
                            android:layout_width="@dimen/W170"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/W24"
                            android:drawableEnd="@mipmap/icon_push_down"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/W24"
                            android:text="32"
                            android:textColor="@color/c_303030"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="@dimen/W3"
                            android:layout_height="match_parent"
                            android:background="@color/c_dbdbdb"
                            android:layout_marginTop="@dimen/H17"
                            android:layout_marginBottom="@dimen/H17"
                            android:layout_marginRight="@dimen/W34">
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:text="@string/orientation"
                            android:textColor="@color/c_303030">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_landscape"
                            android:layout_width="@dimen/W170"
                            android:layout_height="match_parent"
                            android:drawableEnd="@mipmap/icon_push_down"
                            android:text="@string/landscape"
                            android:gravity="center_vertical"
                            android:textColor="@color/c_303030"
                            android:paddingLeft="@dimen/W24"
                            android:layout_marginRight="@dimen/W24">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_screenTypeOfOne"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H70"
                    android:layout_marginTop="@dimen/H25"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/W24"
                        android:layout_marginRight="@dimen/W24">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:text="@string/the_screen_size"
                            android:textColor="@color/c_303030">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_screenSizeValueOfOne"
                            android:layout_width="@dimen/W170"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/W24"
                            android:layout_weight="1"
                            android:drawableEnd="@mipmap/icon_push_down"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/W24"
                            android:text="32"
                            android:textColor="@color/c_303030"></TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_screenTypeOfCustom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/H70"
                    android:layout_marginTop="@dimen/H25"
                    android:background="@color/c_FFFFFF"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/W24"
                        android:layout_marginRight="@dimen/W24">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:text="@string/the_screen_size"
                            android:textColor="@color/c_303030">
                        </TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/W24"
                            android:orientation="horizontal"
                            android:background="@drawable/shape_bg_f8f8fa">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:textColor="@color/c_303030"
                                android:layout_marginLeft="@dimen/W24"
                                android:text="@string/wide">
                            </TextView>

                            <EditText
                                android:id="@+id/edit_screenWide"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:maxLength="6"
                                android:hint="2000"
                                android:textSize="14sp"
                                android:background="@null"
                                android:inputType="number"
                                android:layout_marginLeft="@dimen/W15">
                            </EditText>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:textColor="@color/c_303030"
                                android:layout_marginLeft="@dimen/W24"
                                android:layout_marginRight="@dimen/W24"
                                android:text="px">
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/W24"
                            android:orientation="horizontal"
                            android:background="@drawable/shape_bg_f8f8fa">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:textColor="@color/c_303030"
                                android:layout_marginLeft="@dimen/W24"
                                android:text="@string/high_">
                            </TextView>

                            <EditText
                                android:id="@+id/edit_screenHigh"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:maxLength="6"
                                android:textSize="14sp"
                                android:hint="2000"
                                android:background="@null"
                                android:inputType="number"
                                android:layout_marginLeft="@dimen/W15">
                            </EditText>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:textColor="@color/c_303030"
                                android:layout_marginLeft="@dimen/W24"
                                android:layout_marginRight="@dimen/W24"
                                android:text="px">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_linTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/H3"
                android:background="@color/c_f2f2f2"
                android:layout_marginTop="@dimen/H25"
                android:layout_marginLeft="@dimen/W24"
                android:layout_marginRight="@dimen/W24"
                android:layout_below="@id/status_screen">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/H100"
                android:layout_below="@id/tv_linTitle"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/W24">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/screen_name"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/c_303030"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/W24">
                </TextView>

                <EditText
                    android:id="@+id/edit_screenName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/please_enter_a_screen_name"
                    android:background="@null"
                    android:maxLength="100"
                    android:textSize="14sp"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/W24"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/W24">
                </EditText>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/H400"
            android:layout_marginLeft="@dimen/W24"
            android:layout_marginRight="@dimen/W24"
            android:layout_marginTop="@dimen/H24"
            android:background="@drawable/shape_ffffff">

            <TextView
                android:id="@+id/tv_basicTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/W24"
                android:layout_marginTop="@dimen/H24"
                android:text="@string/basic_properties"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/c_000000">
            </TextView>

            <RelativeLayout
                android:id="@+id/rel_basicStayTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_below="@id/tv_basicTitle"
                android:layout_marginTop="@dimen/H42">

                <TextView
                    android:id="@+id/tv_basicStayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_stay_time"
                    android:textColor="@color/c_303030"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/W24">
                </TextView>

                <EditText
                    android:id="@+id/edit_stayTime"
                    android:layout_width="@dimen/W200"
                    android:layout_height="@dimen/H60"
                    android:layout_toRightOf="@id/tv_basicStayTime"
                    android:layout_marginLeft="@dimen/W170"
                    android:hint="15"
                    android:paddingLeft="@dimen/W24"
                    android:textColor="@color/c_303030"
                    android:textColorHint="@color/c_303030"
                    android:singleLine="true"
                    android:inputType="number"
                    android:background="@drawable/shape_round_8_f2f2f2">
                </EditText>

                <TextView
                    android:id="@+id/tv_stayTimeUnit"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/edit_stayTime"
                    android:layout_height="@dimen/H60"
                    android:layout_alignParentRight="true"
                    android:text="@string/second"
                    android:textColor="@color/c_303030"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/W24"
                    android:paddingRight="@dimen/W24"
                    android:drawableEnd="@mipmap/icon_push_down">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_basicPreviewTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_below="@id/rel_basicStayTime"
                android:layout_marginTop="@dimen/H50">
                <TextView
                    android:id="@+id/tv_basicPreviewTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_pre_load_time"
                    android:textColor="@color/c_303030"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/W24">
                </TextView>

                <EditText
                    android:id="@+id/edit_previewTime"
                    android:layout_width="@dimen/W200"
                    android:layout_height="@dimen/H60"
                    android:layout_toRightOf="@id/tv_basicPreviewTime"
                    android:layout_marginLeft="@dimen/W170"
                    android:hint="5"
                    android:textColorHint="@color/c_303030"
                    android:textColor="@color/c_303030"
                    android:paddingLeft="@dimen/W24"
                    android:singleLine="true"
                    android:inputType="number"
                    android:background="@drawable/shape_round_8_f2f2f2">
                </EditText>

                <TextView
                    android:id="@+id/tv_previewTimeUnit"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/edit_previewTime"
                    android:layout_height="@dimen/H60"
                    android:layout_alignParentRight="true"
                    android:text="@string/second"
                    android:textColor="@color/c_303030"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/W24"
                    android:paddingRight="@dimen/W24"
                    android:drawableEnd="@mipmap/icon_push_down">
                </TextView>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/H2"
                android:background="@color/c_f2f2f2"
                android:layout_below="@id/rel_basicPreviewTime"
                android:layout_marginTop="@dimen/H35">
            </TextView>

            <TextView
                android:id="@+id/tv_basicPrompt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rel_basicPreviewTime"
                android:layout_marginTop="@dimen/H37"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/W24"
                android:paddingRight="@dimen/W24"
                android:text="@string/set_the_prompt">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/H380"
            android:layout_marginTop="@dimen/H24"
            android:layout_marginLeft="@dimen/W24"
            android:layout_marginRight="@dimen/W24"
            android:background="@drawable/shape_ffffff">
            <TextView
                android:id="@+id/tv_globalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/W24"
                android:layout_marginTop="@dimen/H24"
                android:text="@string/global_properties"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/c_000000">
            </TextView>

            <RelativeLayout
                android:id="@+id/rel_globalAnimation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/H35"
                android:layout_below="@id/tv_globalTitle">

                <TextView
                    android:id="@+id/tv_globalAnimation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_animation_effect"
                    android:textColor="@color/c_303030"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/W24">
                </TextView>

                <TextView
                    android:id="@+id/tv_animationStyle"
                    android:layout_width="@dimen/W340"
                    android:layout_height="@dimen/H60"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/W24"
                    android:background="@drawable/shape_round_8_f2f2f2"
                    android:text="@string/fade_in_fade_out"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/W24"
                    android:drawableEnd="@mipmap/icon_push_down"
                    android:paddingRight="@dimen/W24"
                    android:textColor="@color/c_303030">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_animationTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/H35"
                android:layout_below="@id/rel_globalAnimation">

                <TextView
                    android:id="@+id/tv_globalAnimationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dynamic_effect_of_time"
                    android:textColor="@color/c_303030"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/W24">
                </TextView>

                <RelativeLayout
                    android:layout_width="@dimen/W340"
                    android:layout_height="@dimen/H60"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/W24"
                    android:background="@drawable/shape_round_8_f2f2f2"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/W24"
                    android:paddingRight="@dimen/W24">

                    <TextView
                        android:id="@+id/tv_globalTimeUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/millisecond"
                        android:gravity="center_vertical"
                        android:textColor="@color/c_808080"
                        android:layout_alignParentRight="true">
                    </TextView>

                    <EditText
                        android:id="@+id/edit_animationTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/tv_globalTimeUnit"
                        android:background="@null"
                        android:hint="300"
                        android:textColor="@color/c_303030"
                        android:textColorHint="@color/c_303030"
                        android:inputType="number"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/W24">
                    </EditText>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/H60"
                android:layout_marginTop="@dimen/H35"
                android:layout_below="@id/rel_animationTime">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_playing_mode"
                    android:textColor="@color/c_303030"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/W24">
                </TextView>

                <CheckBox
                    android:id="@+id/cb_circulation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@drawable/selector_check_button"
                    android:layout_alignParentRight="true"
                    android:text="@string/circulation"
                    android:gravity="center"
                    android:textColor="@color/c_303030"
                    android:paddingLeft="@dimen/W20"
                    android:layout_marginRight="@dimen/W24">
                </CheckBox>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/H100">
        </TextView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>