<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/H400">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/W24"
            android:layout_marginTop="@dimen/H13"
            android:textColor="@color/c_000000"
            android:textSize="13sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/W14"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/H14"
            android:textColor="@color/c_999999"
            android:textSize="11sp">
        </TextView>

        <com.datacvg.dimp.widget.BulletChart
            android:id="@+id/bullet_chart"
            android:layout_width="match_parent"
            android:layout_below="@id/tv_name"
            android:layout_above="@id/tv_unit"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
        </com.datacvg.dimp.widget.BulletChart>

    </RelativeLayout>
</RelativeLayout>