<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/W24"
    android:layout_marginRight="@dimen/W24"
    android:layout_marginTop="@dimen/H20"
    android:layout_height="@dimen/H200">

    <ImageView
        android:id="@+id/img_recordTime"
        android:layout_width="@dimen/W30"
        android:layout_height="@dimen/H30"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_record_time">
    </ImageView>

    <TextView
        android:id="@+id/tv_recordTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_recordTime"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/W20">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_recordTime"
        android:layout_marginTop="@dimen/H20"
        android:orientation="vertical"
        android:paddingLeft="@dimen/W20"
        android:background="@drawable/shape_action_plan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/H10"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_recordUser"
                android:layout_width="@dimen/W30"
                android:layout_height="@dimen/H30"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_record_head">
            </ImageView>

            <TextView
                android:id="@+id/tv_recordUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_recordTime"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/W20">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/H10"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_recordOperate"
                android:layout_width="@dimen/W30"
                android:layout_height="@dimen/H30"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_record_action">
            </ImageView>

            <TextView
                android:id="@+id/tv_recordOperate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_recordOperate"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/W20">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/H10"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/H10"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_recordState"
                android:layout_width="@dimen/W30"
                android:layout_height="@dimen/H30"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_record_report">
            </ImageView>

            <TextView
                android:id="@+id/tv_recordState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_recordState"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/W20"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/W20">
            </TextView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>