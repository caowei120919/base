<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/W228"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_303030">

    <RelativeLayout
        android:id="@+id/rel_bySystemDefault"
        android:layout_width="match_parent"
        android:layout_height="@dimen/H80">

        <ImageView
            android:id="@+id/img_thumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_report_thumb"
            android:layout_marginLeft="@dimen/W25">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_thumb"
            android:gravity="center"
            android:text="@string/by_system_default"
            android:layout_centerInParent="true"
            android:textColor="@color/c_FFFFFF"
            android:textSize="16sp"
            android:layout_gravity="center">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_accordingToTheName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/H80">

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_report_add_screen"
            android:layout_marginLeft="@dimen/W25">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_add"
            android:gravity="center"
            android:text="@string/according_to_the_name"
            android:layout_centerInParent="true"
            android:textColor="@color/c_FFFFFF"
            android:textSize="16sp"
            android:layout_gravity="center">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/H2"
            android:layout_alignParentTop="true"
            android:background="@color/c_FFFFFF">
        </TextView>
    </RelativeLayout>
</LinearLayout>