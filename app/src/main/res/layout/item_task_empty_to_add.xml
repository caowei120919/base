<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/H200">

    <ImageView
        android:id="@+id/img_planUserImage"
        android:layout_width="@dimen/W30"
        android:layout_height="@dimen/H30"
        android:layout_marginLeft="@dimen/W24"
        android:layout_marginTop="@dimen/H20"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_plan_user">
    </ImageView>

    <TextView
        android:id="@+id/tv_planUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_planUserImage"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/W20">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img_planUserImage"
        android:gravity="center"
        android:text="@string/no_action_plan">
    </TextView>
</RelativeLayout>