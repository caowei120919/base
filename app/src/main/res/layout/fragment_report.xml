<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/c_FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/c_303030"
            android:textSize="20sp"
            android:text="@string/report"
            android:layout_marginLeft="@dimen/W30">
        </TextView>

        <ImageView
            android:id="@+id/img_sort"
            android:layout_width="@dimen/W32"
            android:layout_height="@dimen/W32"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_sort"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/W24"
            android:layout_alignParentRight="true">
        </ImageView>

        <ImageView
            android:id="@+id/img_changeType"
            android:layout_width="@dimen/W32"
            android:layout_height="@dimen/W32"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_grid"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/W24"
            android:layout_toLeftOf="@id/img_sort">
        </ImageView>

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="@dimen/W32"
            android:layout_height="@dimen/W32"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_search_of_report"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/W24"
            android:layout_toLeftOf="@id/img_changeType">
        </ImageView>
    </RelativeLayout>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic_title"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_centerHorizontal="true"
        android:background="@color/c_FFFFFF">
    </net.lucode.hackware.magicindicator.MagicIndicator>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/status_title"
        android:background="@color/c_f8f8fa">
    </FrameLayout>
</LinearLayout>