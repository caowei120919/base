<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.enlogy.statusview.StatusRelativeLayout
        android:id="@+id/status_report"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/c_FFFFFF"
        app:rContentView="@layout/view_report"
        app:rExtendView="@layout/view_trash">
    </com.enlogy.statusview.StatusRelativeLayout>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic_title"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_centerHorizontal="true"
        android:background="@color/c_FFFFFF">
    </net.lucode.hackware.magicindicator.MagicIndicator>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/status_title"
        android:background="@color/c_f8f8fa">
    </FrameLayout>
</LinearLayout>