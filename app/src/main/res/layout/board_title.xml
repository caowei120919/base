<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/c_FFFFFF">

    <TextView
        android:id="@+id/tv_complete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/complete"
        android:gravity="center"
        android:textColor="@color/c_303030"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/W24"
        android:paddingRight="@dimen/W24">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/board"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@color/c_303030"
        android:textSize="20sp">
    </TextView>

    <ImageView
        android:id="@+id/img_addIndex"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/H40"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_add_index"
        android:paddingLeft="@dimen/W30"
        android:paddingRight="@dimen/W15">
    </ImageView>
</RelativeLayout>