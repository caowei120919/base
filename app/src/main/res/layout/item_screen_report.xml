<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/H100" >

    <ImageView
        android:id="@+id/iv_report_type"
        android:layout_width="@dimen/W40"
        android:layout_height="@dimen/H40"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40px"
        android:src="@mipmap/filesimage" />

    <ImageView
        android:id="@+id/iv_report_indicator"
        android:layout_width="@dimen/W30"
        android:layout_height="@dimen/H30"
        android:layout_toRightOf="@id/tv_report_name"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/W20"
        android:src="@mipmap/dash_pull" />
    
    <ImageView
        android:id="@+id/iv_report_check"
        android:layout_width="@dimen/W50"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/W50"
        android:src="@mipmap/cx_select"
        android:layout_height="@dimen/H50" />


    <TextView
        android:id="@+id/tv_report_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/W20"
        android:layout_toRightOf="@id/iv_report_type"
        android:layout_toLeftOf="@id/iv_report_check"
        android:textColor="@color/c_666666"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/W20"
        android:layout_marginRight="@dimen/W20"
        android:background="@color/c_dbdbdb"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/H1" />

</RelativeLayout>
