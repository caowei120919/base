<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FFFFFF"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/actionbar_title" />

    <RelativeLayout
        android:id="@+id/rel_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/H83"
        android:layout_marginLeft="@dimen/W24"
        android:layout_marginRight="@dimen/W24"
        android:background="@drawable/shape_search">

        <ImageView
            android:id="@+id/edit_delete"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/H72"
            android:padding="@dimen/H16"
            android:layout_centerVertical="true"
            android:src="@mipmap/edit_delete"
            android:layout_alignParentRight="true">
        </ImageView>

        <TextView
            android:id="@+id/ed_search"
            android:paddingLeft="@dimen/W35"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/search"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/edit_delete"
            android:textSize="12sp"
            android:singleLine="true"
            android:background="@null"
            android:textColorHint="@color/c_b5b5b5"
            android:drawableLeft="@mipmap/icon_search"
            android:drawablePadding="@dimen/W32">
        </TextView>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/H50"
        android:text="@string/department"
        android:layout_marginTop="@dimen/H10"
        android:textColor="@color/c_BCBCBC"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/W24"
        android:textSize="12sp"
        android:background="@color/c_f8f8fa">
    </TextView>

    <RelativeLayout
        android:id="@+id/rel_chooseDepartment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/H107">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/department"
            android:layout_centerVertical="true"
            android:textColor="@color/c_303030"
            android:drawableLeft="@mipmap/icon_at_for_department"
            android:gravity="center"
            android:paddingLeft="@dimen/W24"
            android:drawablePadding="@dimen/W24">
        </TextView>

        <TextView
            android:id="@+id/tv_chooseDepartment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/W24"
            android:textColor="@color/c_e6e6e6"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/person_next"
            android:drawablePadding="@dimen/W24"
            android:textSize="@dimen/W28">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/H1"
        android:layout_weight="1">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_contacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>

        <com.datacvg.dimp.widget.LetterView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/W18"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">
        </com.datacvg.dimp.widget.LetterView>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/H6"
        android:background="@color/c_f8f8fa">
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/H100">

        <TextView
            android:id="@+id/tv_selectNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selected_people"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/W30"
            android:textSize="14sp"
            android:textColor="@color/c_303030">
        </TextView>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/W30"
            android:paddingTop="@dimen/H20"
            android:paddingBottom="@dimen/H20"
            android:paddingLeft="@dimen/W40"
            android:paddingRight="@dimen/W40"
            android:textSize="14sp"
            android:textColor="@color/c_FFFFFF"
            android:background="@drawable/shape_round_8_da3a16">
        </TextView>
    </RelativeLayout>
</LinearLayout>