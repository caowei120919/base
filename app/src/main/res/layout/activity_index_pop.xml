<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/H960"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_index">
        <RelativeLayout
            android:id="@+id/rel_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/H60">
            <ImageView
                android:layout_width="@dimen/W60"
                android:layout_height="@dimen/H60"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/dash_index_report_down">
            </ImageView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/H80"
            android:paddingBottom="@dimen/H15"
            android:paddingTop="@dimen/H15"
            android:orientation="horizontal"
            android:layout_below="@id/rel_detail">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </TextView>

            <TextView
                android:id="@+id/tv_reportList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/report_list"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/selector_red_white"
                android:textColor="@drawable/selector_gray_white"
                android:textSize="13sp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </TextView>

            <TextView
                android:id="@+id/tv_action"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/the_action_plan"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/selector_red_white"
                android:textColor="@drawable/selector_gray_white"
                android:textSize="13sp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </TextView>

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/note_the_details"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/selector_red_white"
                android:textColor="@drawable/selector_gray_white"
                android:textSize="13sp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </TextView>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_f8f8fa"
            android:layout_below="@id/lin_title">
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>