<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/actionbar_title"/>

    <include
        layout="@layout/view_search"/>

    <GridView
        android:id="@+id/grid_tableOfFolder"
        android:layout_marginLeft="@dimen/W24"
        android:layout_marginRight="@dimen/W24"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:fastScrollEnabled="true"
        android:verticalSpacing="@dimen/H20"
        android:scrollbars="none"
        android:horizontalSpacing="@dimen/W20"
        android:numColumns="2"
        android:layout_marginTop="@dimen/H24"
        android:layout_marginBottom="@dimen/H24">
    </GridView>
</LinearLayout>