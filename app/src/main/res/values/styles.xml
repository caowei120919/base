<resources>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/c_da3a16</item>
        <item name="colorControlNormal">@color/c_d8d8d8</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="ThemeSplash" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@mipmap/splash_bg</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowBackground">@color/c_24334F</item>
        <item name="colorPrimary">@color/c_24334F</item>
        <item name="colorPrimaryDark">@color/c_26A69A</item>
        <item name="colorAccent">@color/c_24334F</item>
    </style>

    <style name="customDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="AlertDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">@null</item>
        <item name="android:windowIsTranslucent">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="style_item_font_15">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/c_4c4c4c</item>
    </style>

    <style name="style_alert_dialog_button_font">
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/c_00b1f8</item>
    </style>

    <style name="MDStyleDialogRoundBg" parent="android:style/Theme.Material.Dialog.NoActionBar">
        <item name="android:windowBackground">@drawable/dialog_transparent_round_bg</item>
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">#ffffff</item> <!--  菜单字体颜色-->
        <item name="android:textSize">18sp</item> <!-- 菜单字体大小-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/c_00000000</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="window_bottom_in_bottom_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_bottom</item>
    </style>

    <style name="window_left_in_left_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_left</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_left</item>
    </style>

    <style name="window_left_in_right_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_left</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_right</item>
    </style>

    <style name="window_right_in_right_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_right</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_right</item>
    </style>

    <style name="window_right_in_left_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_right</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_left</item>
    </style>

    <style name="dialog_scale_animstyle">
        <item name="android:windowEnterAnimation">@anim/scale_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/scale_dialog_out_anim</item>
    </style>

    <style name="window_top_in_top_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_top</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_top</item>
    </style>


    <!--从下往上弹框-->
    <style name="CommonDialogB_T" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/CommonDialog.AnimationStyleB_T</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CommonDialog.AnimationStyleB_T" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/ui_dialog_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/ui_dialog_out_to_bottom</item>
    </style>

    <!--从中心点缩放弹框-->
    <style name="CommonDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/CommonDialog.AnimationStyle</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CommonDialog.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/ui_dialog_in_from_center</item>
        <item name="android:windowExitAnimation">@anim/ui_dialog_out_to_center</item>
    </style>
</resources>